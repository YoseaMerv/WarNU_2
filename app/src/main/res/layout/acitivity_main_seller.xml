<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_seller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.seller.MainSellerActivity"
    tools:openDrawer="start"
    tools:ignore="MissingClass">

    <!-- Konten Utama -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Top green bar -->
        <View
            android:id="@+id/topRectangleSeller"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#00AA13"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Hamburger icon -->
        <ImageView
            android:id="@+id/hamburger_icon_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:src="@drawable/hamburger_menu"
            android:contentDescription="Menu"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/topRectangleSeller"
            app:layout_constraintBottom_toBottomOf="@id/topRectangleSeller" />

        <!-- Logo + WARNU (centered group) -->
        <LinearLayout
            android:id="@+id/header_logo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/topRectangleSeller"
            app:layout_constraintBottom_toBottomOf="@id/topRectangleSeller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/logo_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_bike_logo"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/textViewSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WARNU"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Fragment container for displaying ManageProductFragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_seller"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topRectangleSeller"
            app:layout_constraintBottom_toTopOf="@id/btnTambahProdukSeller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:name="com.imersa.warnu.ui.seller.product.ManageProductFragment" />

        <!-- Tombol Tambah Produk -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTambahProdukSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#1A8754"
            android:text="@string/tambah_produk"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Sidebar Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_seller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>