<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_bike_logo"
            android:contentDescription="Logo"
            android:layout_marginTop="48dp"
            />

        <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login to your"
            android:textColor="#111827"

            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#111827"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email and password to log in"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Email Input -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textColorHint="#9CA3AF"
                    android:textSize="16sp"
                    android:padding="0dp" />

            </LinearLayout>
        </FrameLayout>

        <!-- Password Input with Show/Hide -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#9CA3AF"
                    android:textSize="16sp"
                    android:padding="0dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/showPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_closed_eye"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:contentDescription="Toggle Password Visibility" />
        </FrameLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="#2563EB"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Log In Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:backgroundTint="@color/green"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/loginProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:indeterminate="true" />


        <!-- Sign Up as Buyer or Seller -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/signUpBuyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up as Buyer"
                    android:textColor="#2563EB"
                    android:textSize="14sp"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:text="|"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    />

                <TextView
                    android:id="@+id/signUpSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up as Seller"
                    android:textColor="#2563EB"
                    android:textSize="14sp"
                    android:paddingStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
