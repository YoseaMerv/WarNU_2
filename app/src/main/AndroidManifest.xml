<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.imersa.warnu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WarnuApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|keyboard|locale|layoutDirection|fontScale"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WARNU"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:exported="false" />
        <!-- maps activity -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAKkkbBGEObhmQImjAJsGN06xqvSe4jedU" /> <!-- ✅ Splash Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WARNU.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ✅ Login & Register -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.buyer.RegisterBuyerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.seller.RegisterSellerActivity"
            android:exported="false" /> <!-- ✅ Main Buyer dan Seller -->
        <activity
            android:name=".ui.buyer.main.MainBuyerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.seller.main.MainSellerActivity"
            android:exported="false" />
    </application>

</manifest>